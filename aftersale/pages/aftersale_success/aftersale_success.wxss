.hid-txt-two{overflow: hidden !important; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;}
.hid-txt-one{overflow: hidden !important; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 1; -webkit-box-orient: vertical;}
.clearfix::after{content: ''; clear: both; display: block; height: 0; visibility: hidden;}
.fl{float: left;}
.fr{float: right;}

.tips{background-color: #f9f9f9; padding:  25rpx 25rpx 0;}
.tips .tips-item{font-size: 26rpx; color: #333; line-height: 2em;}
.tips .tips-btn{text-align: right;}
.tips .tips-btn text{font-size: 28rpx; display: inline-block; border: 2rpx solid #333; padding: 8rpx 20rpx; border-radius: 6rpx; margin: 20rpx 0 20rpx 20rpx;}
.express-info .express-title{font-size: 36rpx; color: #000; line-height: 3em; border-bottom: 1px solid #e4e4e4; padding-left: 25rpx;}
.express-info .express-title::before{content: '*'; color: #f00;}
.express-info .express-item{display: flex; align-items: center; font-size: 30rpx; height: 100rpx; border-bottom: 1px solid #e4e4e4;}
.express-info .express-item .express-key{font-weight: 700; border-right: 2rpx solid #aaa; width: 200rpx; text-align: center; color: #515151;}
.express-info .express-item .express-value{flex: 1;}
.express-info .express-value input{padding-left: 20rpx;}
.refund-info .info-title{border-bottom: 2rpx solid #f2f2f2; padding: 25rpx; font-size: 32rpx;}
.refund-info .info-items{padding: 0 25rpx;}
.refund-info .refund-goods{padding:25rpx; border-bottom: 2rpx solid #f2f2f2; display: flex; align-items: center; margin-bottom: 20rpx;}
.refund-info .refund-goods .refund-img{width: 74rpx; height: 74rpx; text-align: center; line-height: 74rpx; margin-right: 20rpx;}
.refund-info .refund-img image{width: 100%; height: 100%;}
.refund-info .info-key{font-size: 28rpx; color: #1b1b1b;}
.refund-info .info-value{font-size: 28rpx; color: #989898;}
.refund-info .info-item{margin-bottom: 10rpx;}
.refund-info .info-item image{width: 80rpx; height: 80rpx; margin-right: 20rpx;}
.reply-items .official{border: 2rpx dotted #f00; display: flex; justify-content: space-between; align-items: center; padding: 12rpx; box-sizing: border-box;}
.reply-items .official .official-left{width: 120rpx; border-right: 2rpx solid #f00; text-align: center; padding-right: 10rpx; margin-right: 10rpx;}
.reply-items .official-left image{width: 30rpx; height: 28rpx;}
.reply-items .official-left view{color: #f00; text-align: center; font-size: 26rpx;}
.reply-items .official .official-right{flex: 1; font-size: 24rpx;}
.reply-items .user-apply{font-size: 28rpx; color: #018BE6; margin: 10rpx 0;}
.reply-items .user-apply text{color: #949494;}
.apply-btn{font-size: 26rpx; color: #018BE6; text-align: right; margin-bottom: 20rpx;}
.confirm{color: #fff; background-color: rgb(255, 103, 0); border: 0; border-radius: 0;}









