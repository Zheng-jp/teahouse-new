<import src="/wxParse/wxParse.wxml"/>
<view class="wrapper">
    <block wx:for="{{proArr}}">
        <view class="hd-swiper borb12">
            <swiper class="swiper-hd" 
                indicator-dots="{{indicatorDots}}" 
                autoplay="{{autoplay}}" 
                interval="{{interval}}" 
                duration="{{duration}}"
                indicator-color="#888"
                indicator-active-color="#fff">
                <block wx:for="{{item.goods_show_images}}" wx:key="">
                    <swiper-item>
                        <image src="{{url}}{{item}}" class="slide-image" width="355" height="150" />
                    </swiper-item>
                </block>
            </swiper>
            <view class="hd-info">
                <view class="hd-name">
                    <text>{{item.project_name}}</text>
                </view>
                <view class="hdv">
                    <view class="hd-bar">
                        <view class="hd-bar-params">
                            <view class="hd-param-sup">
                                <text class="hd-sup-alr">{{item.collecting}}</text>
                                <text>/8000人支持</text>
                            </view>
                            <view class="hd-sup-per">
                                <text>达成</text>
                                <text class="hd-per-figure">{{item.centum}}%</text>
                            </view>
                        </view>
                        <view class="hd-bar-box">
                            <wxzx-progress class="wxzx-progress" 
                                percent="{{item.centum}}"
                                width="{{1?600:710}}"
                                show-info 
                                border-radius="4px" 
                                stroke-width='12' 
                                radius='6' 
                                active-color="#ff9600,#ff1000,#ff0000"></wxzx-progress>
                        </view>
                        <view class="hd-bar-status">
                            <view class="hd-bar-money">
                                <text class="hd-money-val">{{item.collecting}}</text>
                                <text>已筹</text>
                            </view>
                            <view class="fr">
                                <text>已完成</text>
                                <text class="stillTime">剩余{{item.days}}天</text>
                            </view>
                        </view>
                    </view>
                    <view class="hd-share">
                        <image src="./img/share.png" />
                        <view>分享</view>
                    </view>
                </view>
            </view>
        </view>
        <view class="ser-promise borb12">
            <view class="metatit">服务：</view>
            <view class="serList">
                <view class="serItem">
                    <image src="./img/c.png" />
                    <view>本产品为<text>{{item.company_name}}</text>特制商品</view>
                </view>
                <view class="serItem">
                    <image src="./img/c.png" />
                    <view>由<text>{{item.company_name1}}</text>发货并提供售后</view>
                </view>
                <view class="serItem">
                    <image src="./img/c.png" />
                    <text>{{item.company_time}}</text>
                </view>
            </view>
        </view>
        <view class="cho-spec borb12" bindtap="switchDialog">
            <view class="metatit">选择：</view>
            <view class="classify">
                <text>项目规格</text>
                <image src="./img/gt.png" />
            </view>
        </view>
        <view class="tabBox">
            <view class="tab-hd">
                <block wx:for="{{tabHdArr}}" wx:key="">
                    <view class="tab-hd-item {{currTab==index?'active':''}}" 
                        data-current="{{index}}"
                        bindtap="clickTabHd">{{item}}</view>
                </block>
            </view>
            <swiper class="tab-bd"
                current="{{currTab}}" 
                duration="{{500}}"
                bindchange="swiperTabBd">
                <block wx:for="{{tabHdArr}}" wx:key="">
                    <swiper-item>
                        <text>{{item}}</text>
                    </swiper-item>
                </block>
            </swiper>
        </view>
        <view class="ft {{fixiPhone?'fix-iphonex':''}}">
            <view class="ftList">
                <view class="cell h-page">
                    <image src="./img/icon2.png" />
                    <view>首页</view>
                </view>
                <view class="cell support">
                    <image src="./img/icon1.png" />
                    <view>客服</view>
                </view>
                <view class="cell addcart">
                    <image src="./img/cart.png" />
                    <view>购物车</view>
                </view>
                <view class="ft-btn">
                    <text>去支持</text>
                </view>
            </view>
        </view>
        <view class="dialog-container {{switchWidth?'dialog-show':''}}">
            <view class="mask" bindtap="switchDialog"></view>
            <view class="dialog {{switchDialogKey?'dialog-popup':''}}">
                <view class="dialog-content">
                    <view class="dialog-xsku">
                        <view class="tb-sku-container">
                            <view class="sku-pro">
                                <view>
                                    <view class="sku-img">
                                        <image src="https://img.alicdn.com/imgextra/i2/16699276/O1CN01ebSSXr2IOSPyTH71I_!!16699276.jpg_120x120q50s150.jpg" />
                                    </view>
                                    <view class="sku-pro-info">
                                        <view>
                                            <view class="h">￥90.0</view>
                                            <view class="sku-txt">
                                                <view>限购<text>2</text>份</view>
                                                <view>剩余<text>33</text>份</view>
                                            </view>
                                        </view>
                                    </view>
                                    <view class="sku-close" bindtap="switchDialog">
                                        <icon type="cancel" size="24" color="rgb(180,180,180)" /> 
                                    </view>
                                </view>
                            </view>
                            <view class="sku-info">
                                <view>
                                    <view class="sku-spec">
                                        <view class="sku-tit">
                                            <text>项目规格</text>
                                        </view>
                                        <view class="sku-specs">
                                            <block wx:for="{{specArr}}" wx:key="">
                                                <text class="{{specActive==index?'active':''}}"
                                                    data-index="{{index}}"
                                                    bindtap="clickSpec">{{item}}</text>
                                            </block>
                                        </view>
                                    </view>
                                    <view class="sku-story">
                                        <view class="sku-tit">
                                            <text>众筹故事</text>
                                        </view>
                                        <view class="sku-story-content">
                                            <text>红色的目前市面上绝无仅有，总计只有300来份红色的目前市面上绝无仅有，总计只有300来份红色的目前市面上绝无仅有，总计只有300来份</text>
                                        </view>
                                    </view>
                                    <view class="quantity-info">
                                        <view class="sku-quantity">
                                            <view class="sku-tit">购买数量</view>
                                            <view class="btn-minus">
                                                <text>-</text>
                                            </view>
                                            <view class="btn-input">
                                                <input type="number" value="1" />
                                            </view>
                                            <view class="btn-plus">
                                                <text>+</text>
                                            </view>
                                        </view>
                                    </view>
                                    <view class="sku-gear">
                                        <view class="sku-tit">
                                            <text>众筹档位</text>
                                        </view>
                                        <view class="gears">
                                            <view class="active gear gearAll">
                                                <view>
                                                    <text>全额支持</text>
                                                </view>
                                                <view>
                                                    <text class="gearMon">90元</text>
                                                </view>
                                            </view>
                                            <view class="gear">
                                                <text>打赏</text>
                                            </view>
                                        </view>
                                    </view>
                                </view>
                            </view>
                            <view>
                                <view class="sku-btns">
                                    <view class="sku-btn support">支持项目</view>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </block>
</view>