/* storage/pages/realtime_data/realtime_data.wxss */
view{overflow: auto !important;}
page{height: 100%; display: flex; flex-direction: column;}
swiper.swiper-container{min-height: 1020rpx; flex: 1;}
.overflowYauto{overflow-y: auto !important; display: flex; flex-direction: column;}
.hid-txt-two{overflow: hidden !important; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;}
.hid-txt-one{overflow: hidden !important; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 1; -webkit-box-orient: vertical;}
.swiper-tab{display: flex; width: 100%;border-bottom: 2rpx solid #ccc;text-align: center;height: 88rpx;line-height: 88rpx;}
.swiper-tab-item{flex: 1; color: #bcbcbc;}
.active{color:#93291f; position: relative;}
.active::after{content: ''; width: 60%; position: absolute; bottom: 0; left: 50%; margin-left: -30%; display: block; border: 2rpx solid #93291f;}

.humiture-data{padding: 40rpx 40rpx 0 40rpx; font-size: 28rpx; color: #a1a1a1;}
.humiture-data>view{border-bottom: 4rpx solid #f2f2f2; padding-bottom: 40rpx;}
.temperature,
.humidity{display: flex; align-items: center; justify-content: space-between; margin-top: 20rpx;}
.humiture-data .humiture-title{color: #333;}
.temp-echarts{width: 700rpx; height: 500rpx; margin: 0 auto; flex: 1;}


