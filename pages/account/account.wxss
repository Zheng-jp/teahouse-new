/* pages/account/account.wxss */
.money_information{
    width: 750rpx;
    display: flex;
    align-items: center;
    background: #0099FF;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    box-sizing: border-box;
}
.balance{
    text-align: center;
    flex: 1;
    border-right:0.5rpx solid #fff; 
}
.balance_text,.integral_text{
    font-size: 20rpx;
    color: #fff;
    font-weight: bold;
}
.integral{
    flex: 1;
    text-align: center;
}
.balance_money,.integral_money{
    color: #fff;
    font-size: 36rpx;
    font-weight: bold;
}
.assets_management{
    margin-top: 30rpx;
    background: #fff;
    
}
.assets_management_title{
    font-size: 30rpx;
    color: #333;
    padding: 20rpx;
}
.table{
    width: 750rpx;
    display: flex;
    align-items: center;
    flex-wrap:wrap;  
    box-sizing: border-box;
    justify-content: center;
}
.box{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction:column;
    border: solid 1rpx #E4E4E4;
    box-sizing: border-box;
    height: 250rpx;
    flex-basis: 33.24%;
}
.table .ico{
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
}
.table .text{
    font-size: 20rpx;
}
