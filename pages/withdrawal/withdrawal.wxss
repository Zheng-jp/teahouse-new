/* pages/withdrawal/withdrawal.wxss */
.content{
    background: #fff;
}
.head{
   background: #00BBFF;
   color: #fff;
   padding: 20rpx;
   width: 320rpx;
   font-size: 30rpx;
   border-top-right-radius:50rpx; 
   border-bottom-right-radius:50rpx; 
   margin-top: 10rpx;
}
.cards_box{
    display: flex;
    width: 750rpx;
    justify-content: center;
    align-items: center;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}
.on{
  color: #00BBFF;
  border-bottom:4rpx solid #00BBFF; 
}
.weixin_card{
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  padding: 20rpx;
}
.card_card{
    flex: 1;
    text-align: center;
    font-size: 30rpx;
    padding: 20rpx;
}
.limit{
    color: red;
    font-size: 30rpx;
}
.tip{
  font-size: 26rpx;
  font-weight: bold;
  margin-top: 10rpx;
}
.weixin_box{
    padding: 20rpx;
    box-sizing: border-box
}
.form{
  margin-top: 50rpx;
}
.form_list{
  display: flex;
  align-items: center;
  position: relative;
  margin: 18rpx 0;
}
.form_list_text{
  color: #00BBFF;
  font-size: 30rpx;
  width: 240rpx;
  text-align: right;
}
.form_list_input{
  border: solid 1rpx #a1a1a1;
  font-size: 24rpx;
  width: 480rpx;
}
.danwei{
  position: absolute;
  right: 20rpx;
  color: #00BBFF; 
  font-size: 30rpx;
}
.send_cond{
  width: 150rpx;
  text-align: center;
  position: absolute;
  color: #fff;
  background: #00BBFf;
  right: 0;
  font-size: 24rpx;
  height: 58rpx;
  line-height: 58rpx;
  z-index: 99999;
}
.btn-area button{
  color: #fff;
  background: #00BBFf;
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
  width: 750rpx;
  margin-left: -20rpx;
}
.form_list_select{
  display: flex;
  align-items: center;
}
.go{
  width: 480rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #00BBFf;
}