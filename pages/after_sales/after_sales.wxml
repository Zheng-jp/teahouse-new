<view class="wrapper">
	<view class="swiper-tab">
		<view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">全部</view>
		<view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">申请中</view>
		<view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">已撤销</view>
		<view class="swiper-tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="clickTab">已完成</view>
	</view>
	<swiper class="swiper-container" current="{{currentTab}}" duration="300" bindchange="swiperTab">
		<swiper-item>
			<scroll-view class="scroll-items" scroll-y>
				<view class="item">
					<view bindtap="checkDetail">
						<view class="item-top clearfix">
							<view class="tb-num fl">服务编号：201903081234</view>
							<view class="tb-status fr">退款退货成功</view>
						</view>
						<view class="item-mid">
							<view class="img-box">
								<image src="/images/img1.png" />
							</view>
							<view class="info-box">
								<view class="tb-name hid-txt-two">商品名称</view>
								<view class="tb-describe hid-txt-two">
									商品卖点商品卖点商品卖点商品卖点商品卖点商品卖点商品卖点商品
								</view>
								<view class="tb-price clearfix">
									<view class="price fl">
										<image src="./img/img1.png" />￥90.0/片
									</view>
									<view class="quantity fr">×1</view>
								</view>
							</view>
						</view>
					</view>
					<view class="item-bot">
						<view class="total">共1件商品 合计：￥90.0</view>
						<view class="statustext">
							<text class="status-text">已完成</text>
							<text class="status-text">申请中</text>
							<text class="status-text">已撤销</text>
						</view>
					</view>
				</view>
			</scroll-view>
		</swiper-item>
	</swiper>
</view>