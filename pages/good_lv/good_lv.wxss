    border: 1px solid rgb(243,243,243);
}
.lv_nav > view {
    width: 150rpx;
    text-align: center;
}
.on {
    color: red;
    font-weight: 550;
}
.img {
    width: 40rpx;
    height: 40rpx;
}
.main {
    font-size: 0;
}
.kuai {
    width:44.4%;
    display: inline-block;
    text-align: center;
    border: 1rpx solid rgb(245,245,245);
    padding: 20rpx;
    
}
.m_img > image {
    width: 200rpx;
    height: 200rpx;
    margin: 30rpx 0; 
}
.kuai > view {
