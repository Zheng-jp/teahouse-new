<!-- pages/seach/seach.wxml -->
<view class="all">
    <view class="seach_title">
        <image class="seach_img" src="http://ptcb077mt.bkt.clouddn.com/seach.png" mode="widthFix" lazy-load="false" binderror="" bindload=""></image>
        <input type="text" placeholder="搜索商品" class="seach_input" bindinput='getSearchKey' bindblur='routeToSearchResPage' value="" />
        <view class="seach_btu" bindinput='getSearchKey'>搜索</view>
    </view>
    <view class="seach_content">
        <view style="display:flex;">
            <view class="content_title">历史搜索</view>
            <view style="flex:1"></view>
            <view class="content_title"  bindtap='clearHistory'>清空</view>
        </view>
        <view class='content_content'>
            <view class='list' wx:for='{{history}}' data-index='{{index}}' bindtap='routeToSearchResPage'>
                {{item}}
            </view>
        </view>
    </view>
