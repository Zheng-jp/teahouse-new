/* pages/select_address/select_address.wxss */
view {
  overflow: visible;
}

.content_list{
    display: flex;
    align-items: center;
    margin: 40rpx 10rpx 10rpx 10rpx;
    position: relative;
  }
  .add_ico{
    position: absolute;
    width: 50rpx;
    top:11rpx;
    right:38rpx;

  }
  .delect_ico{
    position: absolute;
    width: 40rpx;
    bottom:11rpx;
    right:38rpx;
  }
  .radio{
    width: 100rpx;
    text-align: center;
  }
 
  .all{
    background: #fff;
  }
  .add_address{
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    color: #fff;
    position: fixed;
    bottom: 0;
    background: #00BBFF;
    text-align: center;
    font-size: 36rpx;
  }
  .card_infor{
   padding:28rpx;
    border:solid 1rpx #00BBFF;
    width:545rpx;
    font-size:30rpx;
    box-shadow:2rpx 5rpx 30rpx 2rpx #00BBFF;

  }
  .card_infor>view{
     padding: 10rpx;
     border-bottom:solid   1rpx #CCFFFF; 
  }
  .bank_content{
    color: #868686;
  }
  .bank_title{
    display: inline-block;
    width: 150rpx;
    text-align: right;
  }