<!--pages/fortune-result.wxml-->
<view class="result-page">
  <view class="wrap">
    <view class="main">
      <!--margin: 0;padding: 0;解决某些机型有边距出现的问题-->
      <canvas canvas-id='myCanvas' style='width:90%;height:1180rpx;margin: auto;padding: 0;display: block;'></canvas>
    </view>
  </view>
  <view class='footer'>
    <view class='btn-layout'>
      <!-- <button class='btn-pierced btn-width' bindtap="returnIndex">换个名字测</button> -->
      <view class="btns"  bindtap="saveImage">
        <image src="http://zhihuichacang.com/u2079.png" style="width:40px;height:40px;"/>
        <view >下载到本地</view>
      </view>
    </view>
    <view class='btn-layout'>
      <!-- <button class='btn btn-layout btn-width' bindtap="saveImage">保存图片</button> -->
      <view class="btns" style="position: relative;">
        <button open-type="share"></button>
        <image src="http://zhihuichacang.com/u2078.png" style="width:40px;height:40px;"/>
        <view >赠送给好友</view>
      </view>
    </view>
  </view>
</view>