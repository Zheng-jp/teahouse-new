<!--index.wxml-->
<import src="../../utils/template.wxml" />
<view class="container">
   <view class='title'>
      <view style='float: left;' bindtap="nfc">
          <view class="nfc"><image  src="img/u270.png"> </image> </view>
          <view class='fangwei' >溯源</view>
      </view>
      <image src="img/seach.png"  class="seach_img" mode="widthFix" />
      <input type='text' class='seach' placeholder="请输入"></input>
       <view style='float: left;'>
          <view class="ma"><image  src="img/u180.png"> </image> </view>
          <view class='fangwei'>会员码</view>
      </view>
   </view>
    <view class='home_banner'>
         <swiper indicator-dots="{{indicatorDots}}"
              autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" circular="{{circular}}" duration="1000">
              <block wx:for="{{image}}"  wx:key="{{index}}">
                <swiper-item>
                  <image src="{{item}}" class="slide-image" />
                </swiper-item>
              </block>
         </swiper>

    </view>
