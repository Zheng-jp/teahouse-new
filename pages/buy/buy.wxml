<view class='all' style='height:{{heght}}px'>
  <view class='goods_wrap'>
    <view class='goods_info_wrap'>
      <!-- 如果购物车内没有数据，就显示没有数据 -->
      <view class="cartList" hidden="{{!iscart}}">
        <image src="http://ptcb077mt.bkt.clouddn.com/u2890.png" mode='widthFix' style='width:200rpx;' />
        <view class='no_good_text'>哎呦，购物车空空如也~</view>
        <view class='buton_to' bindtap='moveToMarket'>到商城随便逛逛</view>
      </view>
      <checkbox-group bindchange="checkboxChange">
        <view wx:for='{{goodList}}' class="goodList" wx:key="{{index}}">
          <view class='content_list'>
            <view class='radio'>
              <checkbox value="{{item.id}}" color='#fff' checked="{{item.checked}}" />
            </view>
            <view class='content_list_img' style='width:220rpx;'>
              <image src='{{url}}{{item.goods_images}}' mode='widthFix'></image>
            </view>
            <view class='good_infors'>
              <view class='good_name'>{{item.goods_name}}</view>
              <view class='good_infor'>
                <block wx:for="{{item.bq_arr}}" wx:key="index">
                  <image class="image_bq" style="vertical-align: middle;" src="http://ptcb077mt.bkt.clouddn.com/kecun.png" wx:if="{{item.kc == 1}}"></image>
                  <image class="image_bq" src="http://ptcb077mt.bkt.clouddn.com/hot.png" wx:if="{{item.hot == 1}}"></image>
                  <image class="image_bq" src="http://ptcb077mt.bkt.clouddn.com/chuxiao.png" wx:if="{{item.cx == 1}}"></image>
                  <image class="image_bq" src="http://ptcb077mt.bkt.clouddn.com/qingchang.png" wx:if="{{item.qc == 1}}"></image>
                </block>
                <view class="texts" wx:for="{{item.goods_sign}}" wx:key="{{index}}">
                  {{item.text}}
                </view>
                {{item.goods_selling}}
              </view>
              <view class='good_price'>
                <view class='price'>
                  <image src='http://ptcb077mt.bkt.clouddn.com/img1.png' mode='widthFix' style='width:40rpx;'></image>
                  <view class='text_red'>￥{{item.money}}</view>
                  <view class="limit_style" wx:if="{{item.is_limit == 1 && item.limit_number > 0}}">
                    限购数量：{{item.limit_number}}
                  </view>
                  <view class="limit_style" wx:if="{{item.is_limit == 1 && item.limit_number == 0}}">
                    不限购
                  </view>
                </view>
                <view class='good_num text_red'>×{{item.goods_unit}}</view>
              </view>
            </view>
          </view>
          <view class='quantity'>
            <view class='purchase_quantity'>购买数量</view>
            <view class='select_quantity'>
              <view class='subtract' catchtap="bindMinus" data-id="{{item.tab}}" data-shopid="{{item.id}}">
                -
              </view>
              <view class='num'>
                <input type="number" placeholder="" value="{{item.goods_unit}}"   bindinput='getSearchKey' bindblur='shift_out'/>
              </view>
              <view class='add' catchtap="bindPlus" data-id="{{item.tab}}" data-shopid="{{item.id}}">
                +
              </view>
            </view>
          </view>
        </view>
      </checkbox-group>
    </view>
  </view>
