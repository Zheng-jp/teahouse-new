.nav_left {
  position: fixed;
  left: 0;
  top: 0;
  width: 200rpx;
  background: #fff;
  height: 100%;
  z-index: 1001;
  border-right: solid 1rpx #c9c9c9;
}

.nav_right {
  width: 550rpx;
  margin-left: 200rpx !important;
  overflow: scroll;
}

.nac_left_li {
  line-height: 24px;
  font-size: 26rpx;
  color: #000;
  text-align: center;
  margin: 8px 0 8px 0px;
}

.good_box {
  display: flex;
  flex-wrap: wrap;
}

.nav_goods_box {
  width: 33.33%;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

