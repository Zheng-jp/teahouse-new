.nav_goods_name {
  padding-left: 15rpx;
  line-height: 20px;
  font-size: 12px;
  color: #333;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  -webkit-box-orient: vertical;
  width: 150rpx;
}

.nav_goods_price {
  line-height: 20px;
  font-size: 18px;
  color: red;
}

