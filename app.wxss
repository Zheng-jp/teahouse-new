 .weui-grids {
     position: relative;
     overflow: hidden;
 }
  
  .weui-grids:before {
     content: " ";
     position: absolute;
     left: 0;
     top: 0;
     right: 0;
     height: 1px;
     color: #d9d9d9;
  
 } 
  
  .weui-grids:after {
     content: " ";
     position: absolute;
     left: 0;
     top: 0;
     width: 1px;
     bottom: 0;
     color: #d9d9d9;
  
 } 
 .weui-grid {
     position: relative;
     float: left;
     width: 50%;
     box-sizing: border-box;
     margin-bottom:50rpx;
     height: 500rpx;
     overflow: hidden;
 
 }
  
  .weui-grid:before {
     content: " ";
     position: absolute;
     right: 0;
     top: 0;
     width: 1px;
